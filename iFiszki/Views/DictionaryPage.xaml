<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="iFiszki.DictionaryPage"
             xmlns:local="clr-namespace:iFiszki"
             Title="{Binding DictionaryName}"
             WidthRequest="470">
    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            
        <Editor x:Name="oryginalWord" 
                Margin="0,10,0,0"
                Placeholder="Polski"
                Text="{Binding StrA}"/>
        <Editor x:Name="translatedWord" 
                Grid.Row="1" 
                Placeholder="KoreaÅ„ski"
                Text="{Binding StrB}"/>
        <HorizontalStackLayout Grid.Row="2" HorizontalOptions="End">
            <Button Text="Rozpocznij" 
                WidthRequest="110" 
                HorizontalOptions="End" 
                Margin="0,0,10,0" 
                Clicked="BeginBtn_Clicked"
                windows:VisualElement.AccessKey="B"/>
        <Button Text="Zapisz" 
                WidthRequest="110" 
                HorizontalOptions="End" 
                Margin="0,0,10,0" 
                Command="{Binding SaveCommand}"
                windows:VisualElement.AccessKey="S"/>
        <Button Text="Dodaj" 
                WidthRequest="110" 
                HorizontalOptions="End" 
                Margin="0,0,10,0" 
                Command="{Binding AddCommand}"
                Clicked="AddBtn_Clicked"
                windows:VisualElement.AccessKey="N"/>
        </HorizontalStackLayout>
        <ListView Grid.Row="3" ItemsSource="{Binding Rows}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout Padding="10">
                            <Label Grid.Column="1"
                           Text="{Binding OriginalWord}"
                           FontAttributes="Bold" />
                            <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding TranslatedWord}"
                           FontAttributes="Italic"
                           VerticalOptions="End" />
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>